{
    "status": [
        {
            "code": 204, 
            "icon": "active", 
            "caption": "Waiting for data..."
        },{
            "code": 424, 
            "icon": "error", 
            "caption": "Error - Failed Dependency!"
        }
    ],
    "elements":[
        {
            "type": "ExpansionPanel",
            "caption": "Configuration Remote CMI",
            "expanded": true,
            "items": [
                {
                    "type": "ValidationTextBox",
                    "name": "RemoteIP",
                    "caption": "IP Address",
                    "validate": "^(?!0)(?!.*\\.$)((1?\\d?\\d|25[0-5]|2[0-4]\\d)(\\.|$)){4}$"
                },{
                    "type": "CheckBox", 
                    "name": "DisableReceiveDataFilter", 
                    "caption": "Receive all data (only use for debugging data)",
                    "onChange": "IPS_RequestAction($id, 'DynamicFormField', json_encode(['Field' => 'RemoteNodeNr', 'Parameter' => 'enabled', 'Value' => ($DisableReceiveDataFilter === false)]));"
                },{
                    "type": "NumberSpinner",
                    "name": "RemoteNodeNr",
                    "caption": "Listen to Node Number",
                    "suffix": "(0 = disabled)",
                    "enabled": "$EnableRemoteNodeNr",
                    "minimum": 0,
                    "maximum": 62 
                }
            ]
        },{
            "type": "ExpansionPanel",
            "caption": "Configuration CoE Node",
            "expanded": true,
            "items": [
                {
                    "type": "RowLayout",
                    "items": [
                        {
                            "type": "NumberSpinner",
                            "name": "NodeNr",
                            "caption": "Own Node Number",
                            "minimum": 1,
                            "maximum": 62 
                        },{
                            "type": "NumberSpinner",
                            "name": "OutputTimer",
                            "caption": "Send outputs all (or immediately if there is a change)",
                            "suffix": "minutes",
                            "minimum": 0 
                        },{
                            "type": "Button",
                            "name": "SendAllOutputs",
                            "caption": "Send now",
                            "onClick": "IPS_RequestAction($id, 'SendAllOutputs', true);"
                        }
                    ]
                },{
                    "type": "RowLayout",
                    "items": [
                        {
                            "type": "List",
                            "name": "Analog",
                            "caption": "Analog variables",
                            "visible": true,
                            "add": false,
                            "delete": false,
                            "sort": {"column": "ID", "direction": "ascending"},
                            "values": "$AnalogValues",
                            "columns": [
                                {
                                    "caption": "#", 
                                    "name": "ID", 
                                    "width": "50px",
                                    "save": true
                                },{
                                    "caption": "Ident", 
                                    "name": "Ident", 
                                    "width": "100px",
                                    "save": true
                                },{
                                    "caption": "Name", 
                                    "name": "Name", 
                                    "width": "auto"
                                },{
                                    "caption": "Variable",
                                    "name": "Config",
                                    "width": "150px",
                                    "save": true,
                                    "edit": {
                                        "type": "Select",
                                        "options": [
                                            { "caption": "disabled", "value": 0 },
                                            { "caption": "enabled", "value": 1 },
                                            { "caption": "input", "value": 2 },
                                            { "caption": "output", "value": 3 },
                                            { "caption": "input / output", "value": 4 }
                                        ]
                                    }
                                }
                            ]
                        },{
                            "type": "List",
                            "name": "Digital",
                            "caption": "Digital variables",
                            "visible": true,
                            "add": false,
                            "delete": false,
                            "sort": {"column": "ID", "direction": "ascending"},
                            "values": "$DigitalValues",
                            "columns": [
                                {
                                    "caption": "#", 
                                    "name": "ID", 
                                    "width": "50px",
                                    "save": true
                                },{
                                    "caption": "Ident", 
                                    "name": "Ident", 
                                    "width": "80px",
                                    "save": true
                                },{
                                    "caption": "Name", 
                                    "name": "Name", 
                                    "width": "auto"
                                },{
                                    "caption": "Variable",
                                    "name": "Config",
                                    "width": "150px",
                                    "save": true,
                                    "edit": {
                                        "type": "Select",
                                        "options": [
                                            { "caption": "disabled", "value": 0 },
                                            { "caption": "enabled", "value": 1 },
                                            { "caption": "input", "value": 2 },
                                            { "caption": "output", "value": 3 },
                                            { "caption": "input / output", "value": 4 }
                                        ]
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]    
        }
    ],
    "actions":[
        {
            "type": "ExpansionPanel",
            "caption": "Test-Center",
            "expanded": false,
            "items": [
                {
                    "type": "TestCenter"
                }
            ]
        }
    ]
}